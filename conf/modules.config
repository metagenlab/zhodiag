/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
    ]
    withName: MINIMAP2_ALIGN {
        ext.args = '' 

    }
    withName: FASTP {
        ext.args = '--low_complexity_filter'
    }
    withName: MINIMAP2HOST {
        publishDir = [
            path: { "${params.outdir}/minimap2/host" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: MINIMAP2FPV {
        publishDir = [
            path: { "${params.outdir}/minimap2/fpv" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: MINIMAP2BACTERIA {
        publishDir = [
            path: { "${params.outdir}/minimap2/pandb" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: MINIMAP2FPV_SORT {
        publishDir = [
            path: { "${params.outdir}/minimap2/fpv" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: MINIMAP2FPV_DEPTH {
        publishDir = [
            path: { "${params.outdir}/minimap2/fpv" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: MINIMAP2FPV_ANNOTATE_PAF {
        publishDir = [
            path: { "${params.outdir}/minimap2/fpv" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: MINIMAP2FPV_CONCAT_PAFS {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/fpv/mapq${params.mapq_cutoff}_cov${params.coverage_cutoff}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: KRAKEN2BACTERIA {
        publishDir = [
            path: { "${params.outdir}/kraken2/pandb/conf${params.kraken2_confidence}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: KRAKEN2FPV {
        publishDir = [
            path: { "${params.outdir}/kraken2/fpv/conf${params.kraken2_confidence}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: KRAKEN2FPV_COMBINE_REPORTS {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/fpv/conf${params.kraken2_confidence}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: KRAKEN2BACTERIA_COMBINE_REPORTS {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/pandb/conf${params.kraken2_confidence}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: PLOTS_KRAKEN2_FPV {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/fpv/conf${params.kraken2_confidence}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: PLOTS_KRAKEN2_BACTERIA {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/pandb/conf${params.kraken2_confidence}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: PLOTS_FPV {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/fpv/mapq${params.mapq_cutoff}_cov${params.coverage_cutoff}" },
            mode: params.publish_dir_mode,
        ]
    }
    withName: PLOTS_BACTERIA {
        publishDir = [
            path: { "${params.outdir}/plots_and_tables/pandb/mapq${params.mapq_cutoff}_cov${params.coverage_cutoff}" },
            mode: params.publish_dir_mode,
        ]
    }
}
